<html lang="en">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!--suppress HtmlUnknownTarget -->
        <link href="/css/global.css" rel="stylesheet">
        {{#success}}
          <title>Success</title>
        {{/success}}
        {{^success}}
          <title>Error</title>
        {{/success}}
    </head>
    <body>
        <div class="card">
          {{#success}}
            <h4 class="card-header text-success">
              Success
            </h4>
            <div class="card-body">
              {{success}}
            </div>
          {{/success}}
          {{^success}}
            <h4 class="card-header text-danger">
              Error
            </h4>
            <div class="card-body">
              {{error}}
              {{^error}}
                {{! Default error when none is set: }}
                Oops, something went wrong.
              {{/error}}
            </div>
          {{/success}}
        </div>
        {{#details}}
        <div class="details">
          {{details}}
        </div>
        {{/details}}
    </body>
</html>
